# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=24h

# Encryption Configuration
ENCRYPTION_KEY=your-aes-256-encryption-key-32-bytes

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_NETWORK=mainnet-beta

# EVM Chain RPC URLs
ETHEREUM_RPC_URL=https://eth.llamarpc.com
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Helius Configuration (Optional - for enhanced analytics)
HELIUS_API_KEY=your-helius-api-key

# Birdeye Configuration (Optional - for market data)
BIRDEYE_API_KEY=your-birdeye-api-key

# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# AI Models (comma-separated, first is primary, others are fallbacks)
# Updated 2026: More powerful and cost-effective models
# Recommended models:
# - deepseek/deepseek-chat: $0.25/$0.38 per 1M tokens - Best value, matches GPT-4o at 1/40th cost
# - google/gemini-3-flash-preview: $0.50/$3 per 1M tokens - 1M context, near-Pro reasoning
# - anthropic/claude-sonnet-4: $3/$15 per 1M tokens - Premium balance
# - xiaomi/mimo-v2-flash:free: Free tier, 256K context
# - mistralai/devstral-2-2512:free: Free tier, 256K context
AI_MODELS=deepseek/deepseek-chat,google/gemini-3-flash-preview,anthropic/claude-sonnet-4,xiaomi/mimo-v2-flash:free,mistralai/devstral-2-2512:free

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Admin Configuration
ADMIN_EMAIL=admin@ordo.app
ADMIN_PASSWORD=your-secure-admin-password-here

# Cache Configuration (Optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=30

# Monitoring (Optional)
SENTRY_DSN=
DATADOG_API_KEY=
