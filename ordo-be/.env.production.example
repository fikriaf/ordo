# Production Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_production_supabase_anon_key

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_min_32_chars
JWT_EXPIRES_IN=24h

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key

# Solana Configuration
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_helius_api_key

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# AI Models (comma-separated, first is primary)
AI_MODELS=deepseek/deepseek-chat,google/gemini-3-flash-preview,anthropic/claude-sonnet-4,xiaomi/mimo-v2-flash:free,mistralai/devstral-2-2512:free

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
